{
    "compilerOptions":{
        "target": "ES2015",
        "module": "CommonJS",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["ES2015", "dom", "scripthost" ],
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "preserveSymlinks": true
    },
    "ts-node-dev": {
        "files": true
    },
    "include": ["./src"]
}
